<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Payment"
        android:layout_marginLeft="140dp"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edamount"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="   Enter amount"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:background="@drawable/edshape"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edupid"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="   Enter upi id"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edshape"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <EditText
        android:id="@+id/edupino"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="   Enter upi number"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:background="@drawable/edshape"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberSigned" />

    <Spinner
        android:id="@+id/bank"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:background="@drawable/edshape"
        android:textColorHint="@color/black"
        android:textSize="23dp"
        android:entries="@array/bank"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Pay"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp"
        android:background="@drawable/btn"
        android:backgroundTint="#594C4C"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />
    </LinearLayout>

</ScrollView>