<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleActivityForStart"
    android:background="#3475BF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:text="Choose your task :"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edshape"
            android:backgroundTint="#EFC9AF"
            android:textStyle="bold"
            android:textColor="#104C91"
            android:text="bus route"
            android:textSize="23dp" />

        <Button
            android:id="@+id/button3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edshape"
            android:backgroundTint="#EFC9AF"
            android:textColor="#104C91"
            android:text="Nearby Bus stops"
            android:textStyle="bold"
            android:textSize="23dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edshape"
            android:backgroundTint="#EFC9AF"
            android:textColor="#104C91"
            android:text="Bus timetable"
            android:textStyle="bold"
            android:textSize="23dp" />

        <Button
            android:id="@+id/button1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edshape"
            android:backgroundTint="#EFC9AF"
            android:textColor="#104C91"
            android:text="Update profile"
            android:textStyle="bold"
            android:textSize="23dp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edshape"
                android:backgroundTint="#EFC9AF"
                android:textColor="#104C91"
                android:text="Book Ticket"
                android:textStyle="bold"
                android:textSize="23dp"/>

            <Button
                android:id="@+id/button7"
                android:text="Travelling history"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edshape"
                android:backgroundTint="#EFC9AF"
                android:textColor="#104C91"
                android:textStyle="bold"
                android:textSize="23dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:background="@drawable/edshape"
                android:backgroundTint="#EFC9AF"
                android:textColor="#104C91"
                android:text="Monthly pass"
                android:textStyle="bold"
                android:textSize="23dp"/>



        </LinearLayout>

    </LinearLayout>
</ScrollView>